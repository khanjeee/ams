// Same Height Layout    

function sameHeight() {
    var maxHeight = -1;

    $('.has-same-height > *').each(function() {
        maxHeight = maxHeight > $(this).height() ? maxHeight : $(this).height();
    });

    $('.has-same-height > *').each(function() {
        $(this).height(maxHeight);
    });
}

sameHeight();

$(window).resize(function() {
    sameHeight();
});

// End -- Same Height Layout
