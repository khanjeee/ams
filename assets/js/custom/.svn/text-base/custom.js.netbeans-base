function cancelEdit(target) {
    $('#'+target).removeClass('hide');
    $('#'+target+'-target').addClass('hide');
}


/* ======================== */
// Check if javascript Object is empty.    

function isEmpty(obj) {
    for(var prop in obj) {
        if(obj.hasOwnProperty(prop))
            return false;
    }

    return true;
}

// END - Check if javascript Object is empty.
